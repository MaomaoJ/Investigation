<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.eoe.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    
    <!-- 
    android:layout_gravity是用来设置该view相对与父view 的位置 
    android:gravity　属性是对该view中内容的限定．比如一个button 上面的text. 你可以设置该text 相对于view的靠左，靠右等位置．
    android:layout_marginTop="@dimen/title_height"设置了它距离上方的高度刚好是main_title的高度
    
    -->
    <LinearLayout
        android:id="@+id/main_linear_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        
        android:layout_marginBottom="@dimen/title_height"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/myindicaterlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_above_second_title" >

            <ImageView
                android:id="@+id/imageview_above_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/dis_indicate_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_above_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/dis_indicate_right"
                android:visibility="gone" />
 
            <com.investigation.indicator.TitlePageIndicator
                android:id="@+id/above_indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#666"
                
                />
            
            <!-- app:selectedColor="#666" -->
             
        </FrameLayout>

         <!--  
        <include layout="@layout/loading_layout" />

        <include layout="@layout/load_failed_layout" />
        -->

        <android.support.v4.view.ViewPager
            android:id="@+id/above_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:visibility="visible">           
           
           
           </android.support.v4.view.ViewPager>
    </LinearLayout>
    
     <!-- 
    <include
        android:id="@+id/main_title"
        layout="@layout/above_title" />
         -->
        

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
         android:layout_gravity="bottom"
         android:background="#887788"
         android:orientation="horizontal"
        >
        <Button 
            android:id = "@+id/button_index"
            android:layout_height="match_parent"
             android:layout_width="0dp"
            android:layout_weight="1"
            android:text="模块一"
            />
        <Button 
            android:id = "@+id/button_myaccount"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="模块二"
            />
        <Button 
            android:id = "@+id/button_accumulatedshopping"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text = "模块三"
            />
        
        
    </LinearLayout>

</FrameLayout>
<!-- 
每个页面都有的那个背景是在androidManifest.XML中改的。

 -->