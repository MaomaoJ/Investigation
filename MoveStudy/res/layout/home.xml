<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/NORMAL_BACKGROUND_COLOR3"
        android:orientation="vertical"
        tools:context="${relativePackage}.${activityClass}" >

        <include
            android:id="@+id/main_title"
            layout="@layout/above_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp" >

            <com.investigation.widget.ViewFlow
                android:id="@+id/home_viewflow"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.investigation.widget.CircleFlowIndicator
                android:id="@+id/home_viewflowindicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#7f808080"
                android:padding="10dip" />
        </RelativeLayout>

        <include layout="@layout/border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white" >

            <TextView
                android:id="@+id/home_iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="问卷" />
        </RelativeLayout>

        <include layout="@layout/border" />

        <include layout="@layout/home_question_item" />
    </LinearLayout>

</ScrollView>